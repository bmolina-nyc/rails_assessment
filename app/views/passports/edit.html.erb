<h3>Edit Passport for <%= current_user.email %> </h3>


<%= form_for @passport do |f| %>

  <%= f.label :first_name %>:
  <%= f.text_field :first_name %><br />


  <%= f.label :last_name %>:
  <%= f.text_field :last_name %><br />

  <%= f.label :home_state %>:
  <%= f.collection_select :state, State.all, :id, :name, :include_blank => true %> <br>

  <%= f.hidden_field :user_id, :value => current_user.id %>


  <%= f.submit 'Edit Passport' %> 
<% end %>
